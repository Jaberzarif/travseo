
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ seo.title }}</title>
    <meta name="description" content="{{ seo.description }}">
    <link rel="canonical" href="{{ seo.canonical }}">

    <meta property="og:title" content="{{ seo.ogTitle }}">
    <meta property="og:description" content="{{ seo.ogDescription }}">
    <meta property="og:url" content="{{ seo.ogUrl }}">
    <meta property="og:type" content="{{ seo.ogType }}">
    <meta property="og:image" content="{{ seo.ogImage }}">
    <meta property="og:site_name" content="Dream Tours">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ seo.ogTitle }}">
    <meta name="twitter:description" content="{{ seo.ogDescription }}">
    <meta name="twitter:image" content="{{ seo.ogImage }}">
    {% block stylesheet %}
            <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
     {% endblock %}

     {% if seo is defined %}
    <script type="application/ld+json">
    {
    "@context": "https://schema.org",
    "@type": "TravelAgency",
    "name": "Verite Voyages",
    "url": "https://verite-voyages.com",
    "logo": "https://verite-voyages.com/img/logo.png",
    "image": "https://verite-voyages.com/img/slide_hero.jpg",
    "description": "Travel agency in Tunisia offering Sahara tours, excursions, and tailor-made trips from Djerba.",
    "address": {
        "@type": "PostalAddress",
        "addressCountry": "TN"
    },
    "areaServed": {
        "@type": "Country",
        "name": "Tunisia"
    },
    "sameAs": [
        "https://www.facebook.com/veritevoyagestunisia",
        "https://www.instagram.com/excursion_verite_voyages"
    ]
    }
    </script>
    {% endif %}

</head>

<body>

    {# MENU #}
    {% include 'partials/_menu.html.twig' %}

    {# PAGE CONTENT #}
    {% block body %}
    {% endblock %}

    {# FOOTER #}
    {% include 'partials/_footer.html.twig' %}

</body>


