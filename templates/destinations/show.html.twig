{% extends 'base.html.twig' %}

{% block body %}

<!-- HERO -->
<section class="relative h-[80vh]">
    <img src="{{ destination.image }}"
         alt="{{ destination.name }}"
         class="absolute inset-0 w-full h-full object-cover">

    <div class="absolute inset-0 bg-black/50"></div>

    <div class="relative z-10 h-full flex items-center justify-center text-center text-white px-6">
        <div>
            <h1 class="text-5xl md:text-6xl font-extrabold mb-4">
                {{ destination.name }}
            </h1>

            {% if destination.region %}
                <p class="text-xl opacity-90">
                    {{ destination.region }}
                </p>
            {% endif %}
        </div>
    </div>
</section>

<!-- CONTENT -->
<section class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-3 gap-12">

        <!-- DESCRIPTION -->
        <div class="md:col-span-2">
            <h2 class="text-3xl font-bold mb-6">
                About this destination
            </h2>

            <p class="text-gray-700 leading-relaxed text-lg">
                {{ destination.description }}
            </p>
        </div>

        <!-- MODERN INFO & BOOKING CARD -->
        <div class="bg-white rounded-3xl shadow-2xl p-8 relative overflow-hidden">
            <!-- Decorative gradient circle -->
            <div class="absolute -top-16 -right-16 w-40 h-40 bg-indigo-100 rounded-full mix-blend-multiply opacity-40 animate-pulse"></div>

            <h3 class="text-2xl font-extrabold mb-6 border-b-2 border-indigo-200 pb-2 flex items-center">
                <svg class="w-6 h-6 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Travel Information
            </h3>

            {% if destination.price %}
                <p class="mb-4 text-gray-700">
                    <span class="font-semibold">Price per person:</span>
                    <span class="text-2xl font-bold text-indigo-600">{{ destination.price }} $</span>
                </p>
            {% endif %}

            {% if destination.region %}
                <p class="mb-6 text-gray-600 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a5 5 0 00-10 0v2m0 4v4a2 2 0 002 2h4a2 2 0 002-2v-4" />
                    </svg>
                    <span class="font-semibold">Region:</span> {{ destination.region }}
                </p>
            {% endif %}

            <!-- BOOKING FORM CARD -->
            <div class="relative bg-white/90 rounded-3xl p-1">

                <h3 class="text-2xl font-bold mb-2 text-gray-900">
                    Book this experience
                </h3>
                <p class="text-gray-500 mb-6 text-sm">
                    Secure your spot in just a few clicks ✨
                </p>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                {% if app.user %}
                    <!-- Display user info, read-only -->
                    <div>
                        <label class="block text-sm font-medium text-gray-600 mb-1">Full Name</label>
                        <input type="text" value="{{ app.user.fullName }}" disabled
                            class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-800 bg-gray-100">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-600 mb-1">Email address</label>
                        <input type="email" value="{{ app.user.email }}" disabled
                            class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-800 bg-gray-100">
                    </div>
                {% else %}
                    <div class="text-red-600 font-medium">
                        You must be logged in to book this experience.
                    </div>
                {% endif %}

                <!-- People -->
                <div>
                    <label class="block text-sm font-medium text-gray-600 mb-1">
                        Number of people
                    </label>
                    {{ form_widget(form.people, {
                        attr: {
                            class: 'w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-800 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-300',
                            min: 1
                        }
                    }) }}
                </div>

                <!-- Date -->
                <div>
                    <label class="block text-sm font-medium text-gray-600 mb-1">
                        Preferred date
                    </label>
                    {{ form_widget(form.date, {
                        attr: {
                            class: 'w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-800 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-300'
                        }
                    }) }}
                </div>

                <!-- Message -->
                <div>
                    <label class="block text-sm font-medium text-gray-600 mb-1">
                        Special request (optional)
                    </label>
                    {{ form_widget(form.message, {
                        attr: {
                            rows: 4,
                            class: 'w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-800 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-300 resize-none'
                        }
                    }) }}
                </div>

                {% if app.user %}
                    <button type="submit"
                            class="group relative w-full overflow-hidden rounded-full bg-indigo-600 py-4 font-semibold text-white text-lg transition-all duration-300 hover:bg-indigo-700 hover:shadow-xl hover:-translate-y-0.5">
                        <span class="relative z-10 flex items-center justify-center gap-2">
                            Book now
                            <span class="transition-transform group-hover:translate-x-1">→</span>
                        </span>
                        <span class="absolute inset-0 bg-gradient-to-r from-indigo-500 to-purple-600 opacity-0 group-hover:opacity-100 transition"></span>
                    </button>
                {% endif %}

                {{ form_end(form) }}

                <!-- Success flash -->
                {% for message in app.flashes('success') %}
                    <div class="mt-6 rounded-xl bg-green-100 px-4 py-3 text-green-800 text-sm">
                        ✅ {{ message }}
                    </div>
                {% endfor %}
            </div>



        </div>

        <!-- Optional Tailwind animation for flashes -->
        <style>
            @keyframes fadeIn {
                0% { opacity: 0; transform: translateY(-10px); }
                100% { opacity: 1; transform: translateY(0); }
            }
            .animate-fadeIn { animation: fadeIn 0.5s ease forwards; }
        </style>
    </div>
</section>

{% endblock %}
