{% extends 'base.html.twig' %}

{% block title %}Saharaa | Travel Agency{% endblock %}

{% block body %}

<!-- HERO SECTION -->
<section class="relative h-screen bg-cover bg-center"
    style="background-image: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e');">

    <div class="absolute inset-0 bg-black/60"></div>

    <div class="relative z-10 flex flex-col justify-center h-full max-w-7xl mx-auto px-6 text-white">
        <h1 class="text-5xl md:text-7xl font-extrabold leading-tight mb-6">
            Discover the World <br>
            <span class="text-teal-400">With Us</span>
        </h1>
        <p class="max-w-xl text-lg mb-8 text-white/90">
            Unique travel experiences, luxury destinations, and unforgettable adventures tailored just for you.
        </p>
        <div class="flex gap-4">
            <a href="#" class="bg-teal-500 hover:bg-teal-600 px-8 py-4 rounded-full text-lg font-semibold transition">
                Explore Destinations
            </a>
            <a href="#" class="border border-white px-8 py-4 rounded-full text-lg hover:bg-white hover:text-black transition">
                Contact Us
            </a>
        </div>
    </div>
</section>

<!-- SEARCH BAR -->
<section class="-mt-20 relative z-20">
    <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-2xl p-6 grid md:grid-cols-4 gap-4">
        <input type="text" placeholder="Destination"
            class="border rounded-xl px-4 py-3 focus:ring-2 focus:ring-teal-500">
        <input type="date" class="border rounded-xl px-4 py-3">
        <input type="number" placeholder="Guests"
            class="border rounded-xl px-4 py-3">
        <button class="bg-teal-500 text-white rounded-xl px-6 py-3 font-semibold hover:bg-teal-600 transition">
            Search
        </button>
    </div>
</section>

<!-- FEATURED DESTINATIONS -->
<section class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-4xl font-bold mb-4 text-center">Popular Destinations</h2>
        <p class="text-gray-600 text-center max-w-2xl mx-auto mb-16">
            Explore our most loved travel destinations around the globe.
        </p>

        <div class="grid md:grid-cols-3 gap-10">
            {% set destinations = [
                {'title':'Maldives','img':'https://images.unsplash.com/photo-1500375592092-40eb2168fd21'},
                {'title':'Paris','img':'https://images.unsplash.com/photo-1502602898657-3e91760cbb34'},
                {'title':'Bali','img':'https://images.unsplash.com/photo-1501785888041-af3ef285b470'}
            ] %}

            {% for d in destinations %}
            <div class="group relative overflow-hidden rounded-2xl shadow-lg">
                <img src="{{ d.img }}" alt="{{ d.title }}"
                     class="h-[420px] w-full object-cover group-hover:scale-110 transition duration-700">

                <div class="absolute inset-0 bg-black/40"></div>

                <div class="absolute bottom-0 p-6 text-white">
                    <h3 class="text-2xl font-bold">{{ d.title }}</h3>
                    <p class="text-sm opacity-90 mt-1">Starting from $999</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- WHY CHOOSE US -->
