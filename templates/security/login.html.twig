{% extends 'base.html.twig' %}

{% block title %}Login | Dream Tours{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-600 to-purple-700 px-6">
    <div class="bg-white w-full max-w-md rounded-3xl shadow-2xl p-10">

        <div class="text-center mb-8">
            <h1 class="text-3xl font-extrabold text-gray-800">Welcome Back</h1>
            <p class="text-gray-500 mt-2">Login to manage your bookings</p>
        </div>

        {% for message in app.flashes('warning') %}
            <div class="rounded-xl bg-yellow-100 px-4 py-3 text-yellow-800 text-sm mb-4">
                ⚠️ {{ message }}
            </div>
        {% endfor %}

        <form method="post" class="space-y-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Email address
                </label>
                <input type="email"
                       name="_email"
                       value=""
                       required
                       autofocus
                       class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Password
                </label>
                <input type="password"
                       name="_password"
                       required
                       class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none">
            </div>

            <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-full font-semibold transition transform hover:-translate-y-0.5 hover:shadow-lg">
                Sign In
            </button>
        </form>

        <div class="text-center mt-6 text-sm text-gray-500">
            Don’t have an account?
            <a href="#" class="text-indigo-600 font-semibold hover:underline">
                Register
            </a>
        </div>
    </div>
</div>
{% endblock %}
